@model EmployeeManagement.ViewModel.ViewFormViewModel
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

@using (Html.BeginForm("Product", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div id="divProduct">
        <div class="row" style="margin-top:35px;margin-left:25px;"><h3><strong>Product Center</strong></h3></div>
        <!--2nd Row-->
        <div class="row" style="margin-left:25px;">

            @if (Model.productModel.Count() > 0)
            {
                for (int i = 0; i < Model.productModel.Count; i++)
                {
                    <div class="col-md-2  divProductcontainer">
                        <div class="divInternalProductcontainer">
                            <div class="row">
                                <div id="product-category"><label id="lbl-product-category"><strong>@Html.DisplayFor(x => Model.productModel[i].ProductDescription)</strong></label></div>
                            </div>
                            <div class="row">
                                <div id="product-label"><label id="lbl-product-label"><strong>@Html.DisplayFor(x => Model.productModel[i].ProductNm)</strong></label></div>
                            </div>
                            <div>
                                <div><img src="~/Images/Products/@Html.DisplayFor(x => Model.productModel[i].ProductImage)" style="width:150px" /></div>
                            </div>
                        </div>

                        <div id="divDetails">
                            <div class="pull-left">
                                <h4>$@Html.DisplayFor(x => Model.productModel[i].ProductPrice)</h4>
                            </div>
                            <div class="pull-right">
                                <a href="@Url.Action("Buy", "Home", new { id = @Html.DisplayFor(x => Model.productModel[i].ProductId) })">&equiv;</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

